{
  "name": "dmsconfigbuilder-electron",
  "productName": "DmsconfigbuilderElectron",
  "version": "1.0.0",
  "description": "Electron-based DMSConfigBuilder webpage",
  "license": "MIT",
  "repository": "laszlo462/dmsconfigbuilder-electron",
  "author": {
    "name": "Steve Szabo",
    "email": "laszlo.steve@gmail.com",
    "url": "github.com/laszlo462"
  },
  "scripts": {
    "test": "xo",
    "start": "electron .",
    "build": "electron-packager . --out=dist --asar --overwrite --all",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "win": {
      "target": "portable"
    }
  },
  "files": [
    "index.js",
    "index.html",
    "index.css"
  ],
  "keywords": [
    "electron-app",
    "electron"
  ],
  "dependencies": {
    "electron-debug": "^2.0.0"
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "2.0.2",
    "electron-builder": "^20.22.0",
    "electron-packager": "12.1.0",
    "xo": "^0.21.1"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ]
  }
}
